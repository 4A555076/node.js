          </tr>
        </thead>
        <tbody>
          <% for(let r of rows){ %>
          <tr>
            <td><%=r.pet_id %></td>
            <td><%=r.name %></td>
            <td><%=r.mName %></td>
            <td><%= r.birthday && toDateString(r.birthday) %></td>
            <td><%= r.gender==0 ? '男' :'女' %></td>
            <td><%= r.type==0 ? '貓' : r.type==1 ? "狗" : "其他" %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
